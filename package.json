{
  "name": "angular-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "nx serve",
    "build": "nx build",
    "watch": "nx build --watch --configuration development",
    "test": "nx test",
    "test:ci": "nx test --no-watch --browsers ChromeHeadless",
    "test:coverage": "nx test --no-watch --code-coverage && sleep 2 && pkill -f 'karma-chrome-launcher' || true",
    "prettier": "prettier --write \"src/**/*.{ts,html,css,scss}\"",
    "prettier:check": "prettier --check \"src/**/*.{ts,html,css,scss}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,css,scss}\"",
    "lint": "nx lint",
    "lint:fix": "nx lint --fix",
    "lint:a11y": "eslint --ext .ts,.html src/ --config eslint.config.js",
    "prepare": "husky && husky install",
    "e2e": "nx e2e",
    "e2e:ci": "nx build --configuration production && nx serve --configuration production --port 4201 & sleep 10 && cypress run --browser chrome --headless --config baseUrl=http://localhost:4201 && pkill -f 'ng serve' && sleep 2 && pkill -f 'cypress' || true",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run"
  },
  "private": true,
  "lint-staged": {
    "src/**/*.{ts,html,css,scss}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "bootstrap": "^5.3.5",
    "bootstrap-icons": "^1.11.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.7",
    "@angular-devkit/core": "^19.2.7",
    "@angular-devkit/schematics": "^19.2.7",
    "@angular/cli": "^19.2.7",
    "@angular/compiler-cli": "^19.2.0",
    "@cypress/schematic": "^3.0.0",
    "@nx/angular": "20.7.2",
    "@nx/workspace": "20.7.2",
    "@schematics/angular": "^19.2.7",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "19.3.0",
    "axe-core": "^4.10.3",
    "cypress": "^14.3.0",
    "eslint": "^9.23.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "husky": "^8.0.0",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.5.0",
    "nx": "20.7.2",
    "prettier": "^3.2.5",
    "typescript": "~5.7.2",
    "typescript-eslint": "8.27.0"
  }
}